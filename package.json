{
  "name": "v-genx",
  "version": "0.1.0",
  "description": "v-genx: The ultimate CLI tool to quickly generate boilerplate files for Vue 2 and Vue 3 components",
  "main": "./dist/cli.js",
  "bin": {
    "v-genx": "./bin/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target bun --format esm",
    "dev": "bun run src/cli.ts"
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "dependencies": {
    "chalk": "4",
    "commander": "^14.0.1",
    "ejs": "^3.1.10",
    "fs-extra": "^11.3.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "private": false,
  "type": "module"
}
